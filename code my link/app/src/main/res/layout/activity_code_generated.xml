<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".codemylink.CodeMyLinkActivity">


    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="Your Code is Here"
        android:textColor="@color/colorOnPrimary"
        android:textSize="34dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cga_code_box"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:textIsSelectable="true"

                android:background="@drawable/custom_input_text"
                android:gravity="center"
                android:hint="Your Code"
                android:text="Xy45zm"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:textColor="@color/colorPrimary"
                android:textSize="28dp" />

            <Button
                android:id="@+id/cga_code_copy_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="24dp"
                android:backgroundTint="@color/colorHeading"
                android:gravity="center"
                android:text="Copy"
                android:textColor="@color/colorOnPrimary" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:textSize="10dp"
                android:text="for Link: "
                android:textColor="@color/colorOnPrimary" />

            <TextView
                android:id="@+id/cga_link_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="www.google.com"
                android:textColor="@color/colorHeading2"
                android:textSize="10dp"
                />


        </LinearLayout>



    </LinearLayout>


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/cga_success_animation"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:lottie_autoPlay="true"
        app:lottie_fileName="sucess_google_success.json"
        app:lottie_loop="true"
        app:layout_constraintBottom_toTopOf="@+id/cga_button_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:tint="@color/colorOnPrimary"

        />


    <LinearLayout
        android:id="@+id/cga_button_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="18dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="4dp"
        app:tint="@color/colorOnPrimary" >

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/cda_go_to_home_b"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/custom_button_box2"
            android:src="@drawable/ic_baseline_home_24"
            android:tint="@color/colorOnPrimary" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/cga_share_code_b"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:background="@drawable/custom_button_box2"
            android:src="@drawable/ic_share"
            android:tint="@color/colorOnPrimary" />


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>