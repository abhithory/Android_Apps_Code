<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"

            >

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Version:"
                    android:textColor="@color/colorOnPrimary"/>

                <TextView
                    android:id="@+id/ud_your_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.1"
                    android:textColor="@color/colorOnPrimary"/>


            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Version:"
                    android:textColor="@color/colorOnPrimary"/>

                <TextView
                    android:id="@+id/ud_new_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.1"
                    android:textColor="@color/colorOnPrimary"/>


            </LinearLayout>
        </LinearLayout>

        <WebView
            android:id="@+id/ud_webview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="WebViewLayout" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ud_update_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/custom_button_box2"
            android:textColor="@color/colorOnPrimary"
            android:text="Update Now"
            android:layout_marginRight="36dp"
            android:layout_marginLeft="36dp"
            />

    </LinearLayout>

</ScrollView>