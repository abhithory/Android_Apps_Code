<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".mylinks.MyAllLinks">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/gla_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/mala_back_button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginRight="6dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="12dp"
                    android:foreground="?attr/selectableItemBackground"

                    android:src="@drawable/ic_baseline_arrow_back_24"
                    app:tint="@color/colorOnPrimary" />

                <TextView
                    android:id="@+id/gla_textView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:text="My all links"
                    android:textColor="@color/colorHeading"
                    android:textSize="24dp"
                    android:textStyle="bold" />

            </LinearLayout>


        </androidx.appcompat.widget.Toolbar>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mala_mylinks_re_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/link_item_layout_rv" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="12dp"
            android:layout_height="44dp">

            <ImageView
                android:id="@+id/mala_previous_page_b"

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:foreground="?attr/selectableItemBackground"

                android:src="@drawable/ic_baseline_navigate_before_back_previous"
                app:tint="@color/colorOnPrimary" />
            <ImageView
                android:id="@+id/mala_next_page_b"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:foreground="?attr/selectableItemBackground"

                android:src="@drawable/ic_baseline_navigate_next"
                app:tint="@color/colorOnPrimary" />



        </LinearLayout>



    </LinearLayout>


</androidx.core.widget.NestedScrollView>